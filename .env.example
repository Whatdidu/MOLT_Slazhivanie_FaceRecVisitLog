# ===========================================
# Sputnik Face ID - Environment Configuration
# ===========================================
# Скопируйте этот файл в .env и заполните значения

# Application
APP_NAME=SputnikFaceID
APP_VERSION=0.1.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL) - Sputnik FaceID
SPUTNIK_DB_NAME=sputnik_faceid
SPUTNIK_DB_USER=sputnik
SPUTNIK_DB_PASSWORD=your_secure_password_here
SPUTNIK_DB_PORT=5432

# Logging
# Уровни: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Storage
STATIC_PATH=app/static
DEBUG_PHOTOS_TTL_DAYS=7

# Recognition thresholds
# match >= 0.55, low_confidence = 0.40-0.55, unknown < 0.40
RECOGNITION_MATCH_THRESHOLD=0.55
RECOGNITION_LOW_CONFIDENCE_THRESHOLD=0.40

# Recognition provider
# - "dlib" : lightweight, ~500 MB RAM (рекомендуется для 2 GB серверов)
# - "mock" : без ML, для тестирования
RECOGNITION_PROVIDER=dlib

# GitHub Token (if needed)
GITHUB_TOKEN=your_github_token_here

# ===========================================
# IP Camera Configuration
# ===========================================
CAMERA_ENABLED=true
CAMERA_IP=192.168.31.156
CAMERA_USER=admin
CAMERA_PASSWORD=your_camera_password
CAMERA_RTSP_PORT=554
CAMERA_HTTP_PORT=80
CAMERA_EVENT_PORT=8091
CAMERA_SNAPSHOTS_DIR=snapshots

# ===========================================
# FTP Server for Camera Snapshots
# ===========================================
# Камера загружает снапшоты на FTP сервер при событиях (motion, intrusion)
# Сервер обрабатывает снапшоты для распознавания лиц
FTP_ENABLED=true
FTP_HOST=0.0.0.0
FTP_PORT=2121
FTP_USER=camera
FTP_PASSWORD=camera123
FTP_SNAPSHOTS_DIR=snapshots
# External IP for passive FTP mode (set to your cloud server's public IP)
FTP_PASSIVE_ADDRESS=
